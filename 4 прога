//  4 прога


#include <iostream>
using namespace std;
    void func(int arr[], int a, int b)
    {
        int y = arr[(a + b)/2];
        int i = a;
        int j = b;
        while (i <= j)
        {
            while (arr[i] < y) i++;
            while (arr[j] > y) j--;
            if (i <= j)
            {
                swap(arr[i], arr[j]);
                i++; j--;
            }
        }
        if (i < b)
            func(arr, i, b);
        if (a < j)
            func(arr, a, j);
    }
    int main() {
        int n, k; 
        cin >> n >> k;
        int *arr = new int[n];
        for (int i = 0; i < n; i++) 
            cin >> arr[i];
        func(arr, 0, n - 1);
        for (int i = 0; i < k; i++) 
            if (arr[i] == arr[i + 1] && i != n - 1)
                k++; 
        cout << endl << arr[k - 1] << endl;
    return 0;
}
