#include <iostream>
using namespace std;
int main() {
    int n,temp;
    cin >> n;
    int a[n];
    for (int i=0;i<n;i++)
    {
        cin >> a[i];
    }
    for (int i=0;i<n-1;i++)
    {
        for (int j=0 ;j<(n-i-1);j++)
        {
            if(a[j]>a[j+1])
            {
                temp=a[j];
                a[j]=a[j+1];
                a[j+1]=temp;
            }        }
    }
    int median = a[n/2];
    int c;
    for (int i=0;i<n;i++)
    {
        c += a[i];
    }
    int ans = median - c/n;
    cout << ans << endl ;
    return 0;
}
