#include <iostream>
using namespace std;
void dig_trench(int n, int **arr)
{
    int *dop = new int[n * 2];
    for (int i = 0, k = n; i < n; i++, k--)
        dop[i] = k;
    for (int i = n, k = 0; i < n * 2; i++, k++)
        dop[i] = k;
    
    for (int i = 0, l = 0; i < n; i++, l--)
        for (int p = 0; p < n; p++)
            arr[p][i] = dop[n + p + l];
    
    delete[] dop;
}

int main()
{
    int n;
    cin >> n;
    
    int **Trench = new int*[n];
    for (int i = 0; i < n; i++)
        Trench[i] = new int[n];
    
    dig_trench(n, Trench);
    
    for (int i = 0; i < n; i++)
    {
        for (int p = 0; p < n; p++)
            cout << Trench[i][p] << " ";
        cout << endl;
    } 
    
    for (int i = 0; i < n; i++) 
        delete[] Trench[i]; 
    return 0; 
}
