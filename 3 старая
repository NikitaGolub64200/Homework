#include <iostream>
using namespace std;
void put_reverse_snake(int n, int m, int a, int o, int **arr)
{
    if (m == 1 || n == 1)
        goto exit;
    
    for (int i = m - 1; i > a; i--)
        arr[a][i] = o;
    
    for (int i = a; i < n; i++)
        arr[i][a] = o;
    
    for (int i = a + 1; i < m - 1; i++)
        arr[n - 1][i] = o;
    
    for (int i = n - 1; i > a; i--)
        arr[i][m - 1] = o;
    
    put_reverse_snake(n - 1, m - 1, a + 1, o + 1, arr);
exit:;
}

int main()
{
    int n, m;
    cin >> n;
    m = n;
    
    int **Ziggurat = new int*[n];
    for (int i = 0; i < n; i++)
        Ziggurat[i] = new int[m];
    
    put_reverse_snake(n, m, 0, 1, Ziggurat);
    
    for (int i = 0; i < n; i++)
    {
        for (int p = 0; p < m; p++)
            cout << Ziggurat[i][p] << " ";
        cout << endl;
    } 
    
    for (int i = 0; i < n; i++) 
        delete[] Ziggurat[i]; 

    return 0;
}
